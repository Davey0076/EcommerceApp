<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <TextView
        android:id="@+id/receiptEmailaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: " />

    <TextView
        android:id="@+id/receiptNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: " />

    <TextView
        android:id="@+id/receiptAccno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account No: " />

    <TextView
        android:id="@+id/receiptAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount: " />

    <TextView
        android:id="@+id/receiptDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Date: " />


    <TextView
        android:id="@+id/receiptInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interest charged: " />

    <TextView
        android:id="@+id/receiptTotalBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due loan balance: " />

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close" />


</LinearLayout>
